<section id="experience" class="py-20 relative">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        <span class="bg-gradient-to-r from-purple-400 to-blue-500 bg-clip-text text-transparent">
          Experiencia & Educación
        </span>
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Mi trayectoria profesional y formación académica
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Experiencia Profesional -->
      <div class="fade-in">
        <h3 class="text-2xl font-bold mb-8 flex items-center gap-3">
          <div class="w-8 h-8 bg-gradient-to-r from-purple-400 to-blue-500 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 6h-2V4a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v2H4a2 2 0 0 0-2 2v11a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2zM8 4h8v2H8V4zm5 9h-2v-2h2v2z"/>
            </svg>
          </div>
          Experiencia Profesional
        </h3>
        
        <div class="relative">
          <!-- Timeline line -->
          <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gradient-to-b from-purple-400 via-blue-500 to-transparent"></div>
          
          <div class="space-y-8">
            {experiences.map((exp, index) => (
              <div class="relative pl-12 group">
                <!-- Timeline dot -->
                <div class="absolute left-2 w-4 h-4 bg-gradient-to-r from-purple-400 to-blue-500 rounded-full -translate-x-1/2 border-4 border-gray-950 group-hover:scale-110 transition-transform"></div>
                
                <div class="bg-gray-800/30 backdrop-blur-sm rounded-xl p-6 border border-gray-700/50 hover:border-purple-500/30 transition-all duration-300 hover:transform hover:scale-[1.02]">
                  <div class="flex flex-wrap items-start justify-between mb-4">
                    <div>
                      <h4 class="text-xl font-bold text-white mb-1">{exp.title}</h4>
                      <p class="text-purple-400 font-semibold">{exp.company}</p>
                    </div>
                    <div class="text-right text-sm">
                      <div class="text-gray-400">{exp.period}</div>
                      <div class="text-gray-500">{exp.location} • {exp.type}</div>
                    </div>
                  </div>
                  
                  <p class="text-gray-300 mb-4">{exp.description}</p>
                  
                  <div class="mb-4">
                    <h5 class="text-sm font-semibold text-gray-200 mb-2">Logros principales:</h5>
                    <ul class="space-y-1">
                      {exp.achievements.map(achievement => (
                        <li class="text-sm text-gray-400 flex items-start gap-2">
                          <svg class="w-4 h-4 text-purple-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                          </svg>
                          {achievement}
                        </li>
                      ))}
                    </ul>
                  </div>
                  
                  <div class="flex flex-wrap gap-2">
                    {exp.technologies.map(tech => (
                      <span class="px-3 py-1 bg-gray-700/50 text-gray-300 rounded-full text-xs border border-gray-600/50">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Educación -->
      <div class="fade-in">
        <h3 class="text-2xl font-bold mb-8 flex items-center gap-3">
          <div class="w-8 h-8 bg-gradient-to-r from-blue-400 to-purple-500 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 3L1 9l4 2.18v6L12 21l7-3.82v-6L23 9l-11-6zM6.5 12.18l5.5 3 5.5-3V15l-5.5 3-5.5-3v-2.82z"/>
            </svg>
          </div>
          Educación
        </h3>
        
        <div class="space-y-6">
        {education.map((edu, index) => (
          <div class="bg-gray-800/30 backdrop-blur-sm rounded-xl p-6 border border-gray-700/50 hover:border-blue-500/30 transition-all duration-300">
            <div class="flex items-start justify-between mb-3">
              <h4 class="text-lg font-bold text-white">{edu.title}</h4>
              <span class="text-sm text-gray-400">{edu.period}</span>
            </div>
            <p class="text-blue-400 font-semibold mb-3">{edu.institution}</p>
            <p class="text-gray-300 text-sm">{edu.description}</p>
          </div>
        ))}
