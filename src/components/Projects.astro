<script>
  // Project filtering
  const filterButtons = document.querySelectorAll('.filter-btn');
  const projectCards = document.querySelectorAll('.project-card');
  
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const filter = button.getAttribute('data-filter');
      
      // Update active button
      filterButtons.forEach(btn => {
        btn.classList.remove('bg-gradient-to-r', 'from-purple-500', 'to-blue-600', 'text-white', 'border-transparent');
        btn.classList.add('border-gray-600', 'text-gray-300');
      });
      
      button.classList.add('bg-gradient-to-r', 'from-purple-500', 'to-blue-600', 'text-white', 'border-transparent');
      button.classList.remove('border-gray-600', 'text-gray-300');
      
      // Filter projects
      projectCards.forEach(card => {
        const category = card.getAttribute('data-category');
        
        if (filter === 'Todos' || category === filter) {
          card.style.display = 'block';
          card.style.animation = 'fadeInScale 0.5s ease-out';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
  
  // Set initial active filter
  filterButtons[0].classList.add('bg-gradient-to-r', 'from-purple-500', 'to-blue-600', 'text-white', 'border-transparent');
  filterButtons[0].classList.remove('border-gray-600', 'text-gray-300');
  
  // Project card hover effects
  projectCards.forEach(card => {
    card.addEventListener('mouseenter', () => {
      card.style.boxShadow = '0 25px 50px -12px rgba(0, 0, 0, 0.8), 0 0 30px rgba(16, 185, 129, 0.15)';
    });
    
    card.addEventListener('mouseleave', () => {
      card.style.boxShadow = '';
    });
  });
</script>

<style>

  @reference 'tailwindcss';


  @keyframes fadeInScale {
    0% {
      opacity: 0;
      transform: scale(0.9) translateY(20px);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
  
  .project-card {
    transition: all 0.3s ease;
  }
  
  .project-card:hover {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.8), 0 0 30px rgba(16, 185, 129, 0.15);
  }
</style>
