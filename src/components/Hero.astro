<style>

  @reference 'tailwindcss';

  .floating-particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: linear-gradient(45deg, #ffffff, #3b82f6);
    border-radius: 50%;
    animation: float 6s ease-in-out infinite;
  }
  
  .floating-particle:nth-child(1) {
    top: 20%;
    left: 10%;
    animation-delay: 4s;
  }
  
  .floating-particle:nth-child(2) {
    top: 60%;
    left: 20%;
    animation-delay: 2s;
  }
  
  .floating-particle:nth-child(3) {
    top: 30%;
    right: 15%;
    animation-delay: 4s;
  }
  
  .floating-particle:nth-child(4) {
    bottom: 30%;
    right: 10%;
    animation-delay: 1s;
  }
  
  .floating-particle:nth-child(5) {
    bottom: 20%;
    left: 30%;
    animation-delay: 3s;
  }
  
  .floating-particle:nth-child(6) {
    bottom: 80%;
    left: 30%;
    animation-delay: 3s;
  }
  .floating-particle:nth-child(7) {

    bottom: 60%;
    left: 70%;
    animation-delay: 3s;
  }
  .floating-particle:nth-child(8) {

    bottom: 20%;
    left: 5%;
    animation-delay: 4s;
  }
  .floating-particle:nth-child(9) {

    bottom: 10%;
    left: 80%;
    animation-delay: 2s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
      opacity: 0.5;
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
      opacity: 1;
    }
  }
  
  .social-link {
    @apply p-3 rounded-full bg-gray-800/50 hover:bg-gradient-to-r hover:from-purple-500/20 hover:to-blue-500/20 transition-all duration-300 text-gray-400 hover:text-purple-400;
  }
  
  .fade-in {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.2s forwards;
  }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Typing animation
  const texts = [
    'Frontend Developer', 
    'Backend Developer',
    'UI Designer',
    'Problem Solver',
    'Cybersecurity Enthusiast',
    'Networking Knowledge'
  ];
  
  let textIndex = 0;
  let charIndex = 0;
  let isDeleting = false;
  const typedElement = document.getElementById('typed-text');
  const cursorElement = document.getElementById('cursor');
  
  function type() {
    if (!typedElement) return;
    
    const currentText = texts[textIndex];
    
    if (isDeleting) {
      typedElement.textContent = currentText.substring(0, charIndex - 1);
      charIndex--;
    } else {
      typedElement.textContent = currentText.substring(0, charIndex + 1);
      charIndex++;
    }
    
    let typeSpeed = isDeleting ? 50 : 100;
    
    if (!isDeleting && charIndex === currentText.length) {
      typeSpeed = 2000; // Pausa al final
      isDeleting = true;
    } else if (isDeleting && charIndex === 0) {
      isDeleting = false;
      textIndex = (textIndex + 1) % texts.length;
      typeSpeed = 500; // Pausa antes del siguiente texto
    }
    
    setTimeout(type, typeSpeed);
  }
  
  // Iniciar typing animation
  setTimeout(type, 1000);

</script>
